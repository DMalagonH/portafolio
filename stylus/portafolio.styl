@import "nib"

vendor-prefixes = webkit o ms moz official

orange1 = #EC721F
orange2 = #FE9100
green1 = #849F2A
green2 = #ABC063
gray1 = #2E2E2E
gray2 = #383838
font-color = #363634

body
  font-size 16px
  font-family sans-serif
  color #363634
  margin 0 auto

nav
  background #363634
  background-image linear-gradient(to bottom, #363634 0%, #7A7A7A 100%)
  color white
  border-bottom 1px solid #5C5C5C
  text-align center

ul
	margin 0
	padding 0
	list-style none

a
	text-decoration none
	&:hover
		text-decoration none
		
	

#me
	display none
	.biography
	    border-bottom 1px solid #ddd
	    box-shadow 0 1px 20px rgba(0,0,0,.075)
	    font-size .8em
	    margin 0 auto
	    padding 1em 1em
	.header-avatar
		background #EDEDED
		padding 1.5em 0
		text-align center
		figure
		div
  			display inline-block
		figure
		  img
		    width 150px
		    height 150px
	.header-avatar-container
		margin 0 auto
	.skills
		border-bottom 1px solid #ddd
		border-top 1px solid #ddd
		box-shadow 0 -2px 20px rgba(0,0,0,.075)
		margin 0 auto
		max-width 900px
		padding 1em 1em
		text-align center
		.skills-list
		    list-style none
		    margin 0px
		    padding 0px
			li
				border 1px solid #eeeeee
				border-radius 50%
				background-color #343434
				color white
				display inline-block
				height 80px
				margin .5em .2em
				text-align center
				vertical-align middle
				width 80px
				transition .5s
				&:hover
					background-color #EE7117
					transform rotate(360deg)
				.title
					display block
					font-size .78em
					font-weight bold
					margin-top 1.6em
				.percent
					display block
	.personal-section
		background #363634
		background-image linear-gradient(to bottom, #363634 0%, #7A7A7A 100%)
		color white
		padding 1em
		text-align center
		h1
			font-size 1.2em
			margin .1em auto
		h2
			font-size 1em
			margin .1em auto

#nav-list
  list-style none
  margin 0px
  padding 0px
  li
    display inline-block
    &.active
      a
        color #ABC365
    &.item-nav-border
      border-left 1px solid #5C5C5C
      border-right 1px solid #5C5C5C
    a
      color white
      display block
      font-size 1.5em
      padding .4em 1.5em
      text-decoration none
      transition .5s
      font-size 1.3em
      &:hover
        color #84A12D

.tags
	margin 1em 0
	padding-left 1em

#portfolio
	display none
	.hits
		padding 0
	.project-btn
		text-align right
	.project-detail
		background-color white
		border-bottom 1px solid #ddd
		margin-bottom 20px
		box-shadow 0 1px 20px rgba(0,0,0,.075)
		padding 20px
		.glyphicon
			color #FFA600
			font-size 1.3em
			animation 1.2s star infinite
		h4
			margin 0px
			strong
				margin-left .7em
	.figure-project
		img
			width 100%
			height auto
	.timeline
		border-top 1px solid #ddd
		margin-top 20px
		box-shadow 0 -2px 20px rgba(0,0,0,.075)
		.timeline-list
			a
				color font-color
				padding .7em
				display block
			li
				border-top 1px solid #ddd
				&:hover
					background-color: #eee
			.date
			.title		
				font-weight 800
				padding 0.2em
			.project-img
				display inline-block
				margin 0 1em
				img
					background-color white
					border-radius 50%
					width 80px
					height 80px
					border 3px solid #ddd
					padding 0.1em
					box-shadow 0 1px 20px rgba(0,0,0,.5)
			

#project
	.project-detail
		.figure-project
			img
				width 100%
				height auto
		.project-description
			background-color white
			border-bottom 1px solid #ddd
			margin-bottom 20px
			box-shadow 0 1px 20px rgba(0,0,0,.075)
			padding 1.1em 1.1em
			h4
				margin-top 0
			p
				font-size .8em
	.project-features
		background-color white
		border-top 1px solid #ddd


@keyframes star
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0


.btn-github, .btn-linkedin, .btn-twitter
  font-size 1.6em
  padding 2px 8px

.btn-github
  i
    color #333333

.btn-linkedin
  i
    color #1685D7

.btn-twitter
  i
    color #52A7E7

.social-icons
  margin-left 2em


